<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/imgView_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_alert" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt"
                android:text="SkyTrain Delay Alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stop_name"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="@string/alert_sample"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/timeStampTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="4dp"
                android:text="time stamp: 2018-09-26"
                android:inputType="datetime"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/dist"
                android:textSize="12sp"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
